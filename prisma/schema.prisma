// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum AccessType {
  PRIVATE
  PUBLIC
}

enum StepType {
  INSTRUCTION
  CHOICE
}

model User {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String?
  email     String?   @unique
  image     String?
  role      Role      @default(USER)
  steps     Step[]
  sessions  Session[]
}

model Step {
  id           String         @id @default(uuid())
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  text         String
  user         User           @relation(fields: [userId], references: [id])
  userId       String
  accessType   AccessType     @default(PRIVATE)
  stepType     StepType       @default(INSTRUCTION)
  parents      StepRelation[] @relation("childParents")
  children     StepRelation[] @relation("parentChildren")
  anchors      Anchor[]
  sessionSteps SessionStep[]
}

model StepRelation {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  child      Step     @relation("childParents", fields: [childId], references: [id])
  childId    String
  parent     Step     @relation("parentChildren", fields: [parentId], references: [id])
  parentId   String
  childIndex Int
}

model Anchor {
  id     String @id @default(uuid())
  parent Step   @relation(fields: [stepId], references: [id])
  stepId String
}

model Session {
  id        String        @id @default(uuid())
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  user      User          @relation(fields: [userId], references: [id])
  userId    String
  steps     SessionStep[]
}

model SessionStep {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  step      Step     @relation(fields: [stepId], references: [id])
  stepId    String
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId String
  index     Int
}

